# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_APP_URL=http://localhost:3000

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key-change-this-in-production

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth (Optional)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Analytics (Optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_GOOGLE_AUTH=false
NEXT_PUBLIC_ENABLE_GITHUB_AUTH=false
NEXT_PUBLIC_ENABLE_DARK_MODE=true

# App Configuration
NEXT_PUBLIC_APP_NAME=Story Library
NEXT_PUBLIC_APP_DESCRIPTION=A multilingual story collection platform for language learning
NEXT_PUBLIC_DEFAULT_LANGUAGE=en
NEXT_PUBLIC_SUPPORTED_LANGUAGES=en,tr

# File Upload Configuration
NEXT_PUBLIC_MAX_FILE_SIZE=5242880
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# External Services (Optional)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-key
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your-recaptcha-site-key

# Development Configuration
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_API_TIMEOUT=10000

# Social Media (Optional)
NEXT_PUBLIC_TWITTER_HANDLE=@storylibrary
NEXT_PUBLIC_FACEBOOK_PAGE=storylibrary
NEXT_PUBLIC_INSTAGRAM_HANDLE=@storylibrary

# Contact Information
NEXT_PUBLIC_CONTACT_EMAIL=contact@storylibrary.com
NEXT_PUBLIC_SUPPORT_EMAIL=support@storylibrary.com

# Production URLs (Examples)
# NEXT_PUBLIC_API_URL=https://api.storylibrary.com/api
# NEXT_PUBLIC_APP_URL=https://storylibrary.com
# NEXTAUTH_URL=https://storylibrary.com